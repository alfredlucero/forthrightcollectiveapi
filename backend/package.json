{
  "name": "forthrightcollectivebackend",
  "version": "1.0.0",
  "description": "forthrightcollective backend API",
  "main": "index.js",
  "engines": {
    "node": "12.x"
  },
  "scripts": {
    "build": "tsc",
    "start": "node ./dist/server.js",
    "start:local": "ts-node ./src/server.ts",
    "dev": "cross-env NODE_ENV=development CONFIG_ENV=dev nodemon",
    "staging": "cross-env NODE_ENV=development CONFIG_ENV=staging nodemon",
    "production": "cross-env NODE_ENV=development CONFIG_ENV=production npm run build && nodemon",
    "test": "jest",
    "lint": "tsc --noEmit && eslint --fix './src/**/*.{js,ts}'",
    "precommit": "tsc --noEmit && lint-staged"
  },
  "author": "alfienitylucero",
  "license": "ISC",
  "husky": {
    "hooks": {
      "pre-commit": "npm run precommit",
      "pre-push": "npm run test"
    }
  },
  "lint-staged": {
    "*.{js,ts}": [
      "eslint . --fix --ignore-pattern dist/**",
      "git add"
    ]
  },
  "nodemonConfig": {
    "ignore": [
      "**/*.test.ts",
      "node_modules"
    ],
    "watch": [
      "src"
    ],
    "exec": "npm run start:local",
    "ext": "ts"
  },
  "devDependencies": {
    "@types/compression": "^1.7.0",
    "@types/cors": "^2.8.6",
    "@types/express": "^4.17.6",
    "@types/express-rate-limit": "^5.0.0",
    "@types/jest": "^26.0.0",
    "@types/pg": "^7.14.3",
    "@types/supertest": "^2.0.9",
    "@typescript-eslint/eslint-plugin": "^3.3.0",
    "@typescript-eslint/parser": "^3.3.0",
    "cross-env": "^7.0.2",
    "eslint": "^7.2.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-prettier": "^3.1.4",
    "husky": "^4.2.5",
    "jest": "^26.0.1",
    "lint-staged": "^10.2.11",
    "nodemon": "^2.0.4",
    "prettier": "^2.0.5",
    "ts-jest": "^26.1.0",
    "ts-node": "^8.10.2",
    "typescript": "^3.9.5"
  },
  "dependencies": {
    "body-parser": "^1.19.0",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^8.2.0",
    "express": "^4.17.3",
    "express-jwt": "^6.0.0",
    "express-jwt-authz": "^2.4.0",
    "express-rate-limit": "^5.1.3",
    "express-validator": "^6.5.0",
    "helmet": "^3.23.1",
    "jwks-rsa": "^1.8.1",
    "pg": "^8.2.1",
    "winston": "^3.2.1"
  }
}
